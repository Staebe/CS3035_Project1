#:kivy 2.3.0
FloatLayout:

    GridLayout:
        size_hint: .5, .5
        pos_hint: {'center_x': .5, 'center_y': .5}
        cols: 3
        rows: 3

        Button:
            id: btnTopLeft
            text: ""
            font_size: "40sp"
            on_release: app.presser(btnTopLeft)
            background_color: 0, 1, 1, 1
 

        Button:
            id: btnTopMid
            text: ""
            font_size: "40sp"
            on_release: app.presser(btnTopMid)
            background_color: 0, 1, 1, 1
 

        Button:
            id: btnTopRight
            text: ""
            font_size: "40sp"
            on_release: app.presser(btnTopRight)
            background_color: 0, 1, 1, 1
 

        Button:
            id: btnMidLeft
            text: ""
            font_size: "40sp"
            on_release: app.presser(btnMidLeft)
            background_color: 0, 1, 1, 1
 

        Button:
            id: btnCenter
            text: ""
            font_size: "40sp"
            on_release: app.presser(btnCenter)
            background_color: 0, 1, 1, 1
 

        Button:
            id: btnMidRight
            text: ""
            font_size: "40sp"
            on_release: app.presser(btnMidRight)
            background_color: 0, 1, 1, 1
 

        Button:
            id: btnBottomLeft
            text: ""
            font_size: "40sp"
            on_release: app.presser(btnBottomLeft)
            background_color: 0, 1, 1, 1
 

        Button:
            id: btnBottomMid
            text: ""
            font_size: "40sp"
            on_release: app.presser(btnBottomMid)
            background_color: 0, 1, 1, 1
 

        Button:
            id: btnBottomRight
            text: ""
            font_size: "40sp"
            on_release: app.presser(btnBottomRight)
            background_color: 0, 1, 1, 1
 
    
    Label:
        id: infoLabel
        font_size: "40sp"
        text: ""
        halign: "center"
        pos_hint: {"center_y": .15}
    
    Button:
        id: reset
        text: "Reset"
        size_hint: (0.3, 0.05)  # Adjust the button size as needed
        pos_hint: {"center_x": 0.5, "center_y": 0.05}  # Centered horizontally, positioned below the label
        on_release: app.reset_board(reset)

    Label:
        id: title
        font_size: "80sp"
        text: "Kivy TicTacToe"
        halign: "center"
        color: 1, 1, 1, 1  # Set text color to white
        pos_hint: {"center_y": .85}
    
